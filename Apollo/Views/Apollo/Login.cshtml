@model string
@{
    ViewBag.Title = "Login or Register";
}

<div class="login">
    <form class="form-horizontal panel panel-login" action="LoginHandler" method="post">
        <div class="form-group text-center">
            <label class="control-label col-sm-5" for="loginUsername">Username:</label>
            <input class="col-sm-7 form-control" type="text" name="loginUsername" id="loginUsername" placeholder="Username" maxlength="20" required>
        </div>

        <div class="form-group text-center">
            <label class="control-label col-sm-5" for="loginPassword">Password:</label>
            <input class="col-sm-7 form-control" type="password" name="loginPassword" id="loginPassword" placeholder="Password" required>
        </div>

        <div class="form-group text-center">
            <input class="btn btn-primary" type="submit" value="Login">
        </div>
    </form>

    <form class="form-horizontal panel panel-register" action="RegisterHandler" method="post">
        <div class="form-group text-center">
            <label class="control-label col-sm-5" for="regUsername">Username:</label>
            <input class="col-sm-7 form-control" type="text" name="regUsername" id="regUsername" placeholder="Username" maxlength="20" required>
        </div>

        <div class="form-group text-center">
            <label class="control-label col-sm-5" for="regPassword">Password:</label>
            <input class="col-sm-7 form-control" type="password" name="regPassword" id="regPassword" placeholder="Password" required>
        </div>

        <div class="form-group text-center">
            <label class="control-label col-sm-5" for="confirmPass">Confirm Password:</label>
            <input class="col-sm-7 form-control" type="password" name="confirmPass" id="confirmPass" placeholder="Password" required>
        </div>

        <div class="form-group text-center">
            <label class="control-label col-sm-5" for="regEmail">Email:</label>
            <input class="col-sm-7 form-control" form-control type="email" name="regEmail" id="regEmail" placeholder="Email" maxlength="40" required>
        </div>

        <div class="form-group text-center">
            <input class="btn btn-primary" type="submit" value="Register">
        </div>
    </form>

    <div class="panel-danger text-center">
        <p>@Model</p>
    </div>
</div>