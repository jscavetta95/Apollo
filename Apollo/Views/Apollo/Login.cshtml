@using Apollo.Controllers
@{
    ViewBag.Title = "Login or Register";
}

<div id="topLayerForms" class="mainBorders body">
    <form id="login" class="form-horizontal" onsubmit="return validateForm(this)" action="LoginHandler" method="post">
        <div class="form-group">
            <label class="control-label col-sm-5" for="loginUsername">Username:</label>
            <input class="col-sm-7" type="text" name="loginUsername" id="loginUsername" placeholder="Username" maxlength="20" required>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-5" for="loginPassword">Password:</label>
            <input class="col-sm-7" type="password" name="loginPassword" id="loginPassword" placeholder="Password" required>
        </div>

        <div class="form-group text-center">
            <input style="width: 10%" class="btn btn-primary" type="submit" value="Login">
        </div>
    </form>

    <form id="register" class="form-horizontal" onsubmit="return validateForm(this)" action="RegisterHandler" method="post">
        <div class="form-group">
            <label class="control-label col-sm-5" for="regUsername">Username:</label>
            <input class="col-sm-7" type="text" name="regUsername" id="regUsername" placeholder="Username" maxlength="20" required>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-5" for="regPassword">Password:</label>
            <input class="col-sm-7" type="password" name="regPassword" id="regPassword" placeholder="Password" required>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-5" for="regEmail">Email:</label>
            <input class="col-sm-7" type="email" name="regEmail" id="regEmail" placeholder="Email" maxlength="40" required>
        </div>

        <div class="form-group text-center">
            <input style="width: 10%" class="btn btn-primary" type="submit" value="Register">
        </div>
    </form>

    <div id="login_register_errorMessage" class="panel-danger">
        @if(Session[ApolloController.ERROR_SESSION] != null) {
            Session[ApolloController.ERROR_SESSION].ToString();
        }
    </div>
</div>